<%- include('partials/_header.ejs') %> 
<%- include('partials/_navbar.ejs') %>
<main>
  <!-- Edit song form -->
  <div class="row">
    <div class="card">
      <form
        class="col s12"
        action="/songs/sendEdit/<%=song._id%>?_method=PUT"
        method="POST"
      >
        <!-- Artist name -->
        <div class="row">
          <div class="input-field col s6">
            <i class="material-icons prefix">account_circle</i>
            <input
              type="text"
              id="artistName"
              name="artistName"
              class="validate"
              value="<%= song.artistName %>"
            />
            <label for="artistName">Artist</label>
          </div>

          <!-- Song name -->
          <div class="input-field col s6">
            <i class="material-icons prefix">music_note</i>
            <input
              type="text"
              id="songName"
              name="songName"
              class="validate"
              value="<%= song.songName %>"
            />
            <label for="songName">Song Title</label>
          </div>
        </div>

        <!-- Album image URL -->
        <div class="row">
          <div class="input-field col s6">
            <i class="material-icons prefix">album</i>
            <input
              id="image"
              name="image"
              type="url"
              value="<%= song.image %>"
            />
            <label for="image">Album Image URL</label>
          </div>

          <!-- YouTube URL -->
          <div class="input-field col s6">
            <i class="material-icons prefix">video_library</i>
            <input
              id="videoLink"
              name="videoLink"
              type="url"
              value="<%= song.videoLink %>"
            />
            <label for="videoLink">YouTube Link URL</label>
          </div>
        </div>

        <!-- Notes -->
        <div class="input-field col s12">
          <i class="material-icons prefix">comment</i>
          <textarea id="note" name="note" class="materialize-textarea">
<%= song.note %></textarea
          >
          <label for="note">Notes</label>
        </div>

        <!-- Submit button -->
        <div class="row">
          <button
            class="btn waves-effect waves-light"
            type="submit"
            name="action"
          >
            Re-Submit
            <i class="material-icons right">send</i>
          </button>
        </div>
      </form>
    </div>
  </div>
</main>

<%- include('partials/_footer.ejs') %>
