<%- include('partials/_header.ejs') %> 
<%- include('partials/_navbar.ejs') %>
<main id="bands">
<h1 class="center">Welcome to band camp!</h1>

<!-- Modal Trigger -->
<a
  class="waves-effect right waves-light btn-floating modal-trigger"
  href="#addBand"
  ><i class="material-icons">add</i></a
>

<div class="container">
  <!-- Display Bands -->
  <h3 class="center">Bands you're in!</h3>
  <div class="band-list-conatiner center">
    <% for (let i=0; i < bands.length; i++) { %>
    <!-- New band card -->
    <div class="container s10 card hoverable right-align add-background">
      <ul class="collection">
        <a href="/bands/<%= bands[i].id %>">
          <li class="collection-item">
            <img src="<%= bands[i].logo %>" alt="" class="band-img responsive-img"/>
          </li>
          <li class="collection-item">
            <span class="title truncate"><%= bands[i].bandName %></span>
            <div class="divider"></div>
            <p>Members: <%= bands[i].bandMembers.length %></p>
          </li>
        </a>
      </ul>
    </div>
    <% } %>
  </div>
</div>

<!-- Band popup -->
<div id="addBand" class="modal">
  <div class="modal-content">
    <h2>Add Band</h2>
    <div class="row">
      <div class="card">
        <form class="col s12" action="/bands/addBand" method="POST">
          <!-- Band name -->
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">account_circle</i>
              <input
                type="text"
                id="bandName"
                name="bandName"
                class="validate"
              />
              <label for="artistName">Band Name</label>
            </div>

          <!-- Band logo URL -->
          <div class="row">
            <div class="input-field col s6">
              <i class="material-icons prefix">album</i>
              <input id="logo" name="logo" type="url" />
              <label for="logo">Band logo URL</label>
            </div>

          <!-- bandDesc -->
          <div class="input-field col s12">
            <i class="material-icons prefix">comment</i>
            <textarea
              id="bandDesc"
              name="bandDesc"
              class="materialize-textarea"
            ></textarea>
            <label for="note">About</label>
          </div>

          <!-- Submit button -->
          <div class="row">
            <button
              class="btn waves-effect waves-light"
              type="submit"
              name="action"
            >
              Submit
              <i class="material-icons right">send</i>
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#!" class="modal-close waves-effect waves-green btn-flat"
      >Close</a
    >
  </div>
</div>

</main>
<%- include('partials/_footer.ejs') %>
